<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mapper.ProductsMapper">
    
    <select id="getProductList" resultType="com.spring.models.ProductsVO">
        SELECT product_img_url AS productImg, product_name AS productName, price FROM product_info ORDER BY product_name
    </select>

    <select id="getProduct" parameterType="com.spring.models.ProductsVO" resultType="com.spring.models.ProductsVO">
        SELECT product_name AS productName, price, stock FROM product_info WHERE product_cd = #{productCd}
    </select>
    
     <select id="getProductImg" parameterType="com.spring.models.ProductsVO">

     </select>   
</mapper>