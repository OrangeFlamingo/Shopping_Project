<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mapper.ProductsMapper">
    
    <select id="getUserId" resultType="com.spring.models.UserVO">
        SELECT * FROM userinfo ORDER BY user_id;
    </select>

    <select id="getUserId" parameterType="com.spring.models.UserVO" resultType="com.spring.models.UserVO">
        SELECT user_name AS name, user_id, passwd FROM userinfo WHERE user_id = #{user_id} AND userPasswd = #{passwd};
    </select>
</mapper>

