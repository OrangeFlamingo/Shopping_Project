<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mapper.OrdersMapper">
    
    <select id="getOrderList" resultType="com.spring.models.OrderVO">
        SELECT * FROM order ORDER BY order_num
    </select>

    <select id="getOrder" parameterType="com.spring.models.OrderVO" resultType="com.spring.models.OrderVO">
        SELECT order_num AS product_cd, price, order_count FROM product_info WHERE product_cd = #{productCd}
    </select>
    
</mapper>